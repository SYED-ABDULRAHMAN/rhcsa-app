      "question_id": "Q2",
      "title": "Configure Password Expiration Policy",
      "category": "User Management",
      "difficulty": "medium",
      "difficulty_stars": "⭐⭐",
      "points": 15,
      "time_limit": 600,
      "description": "Set the password of user 'sana' to expire after 30 days and warn 5 days before expiry.",
      "requirements": [
        {
          "id": "user_exists",
          "text": "User 'sana' exists",
          "check_key": "user_exists"
        },
        {
          "id": "max_days",
          "text": "Password max age: 30 days",
          "check_key": "max_days"
        },
        {
          "id": "warn_days",
          "text": "Warning period: 5 days",
          "check_key": "warn_days"
        }
      ],
      "hints": [
        "User 'sana' should already exist (created during setup)",
        "Use 'chage' command to manage password aging",
        "The -M flag sets maximum password age",
        "The -W flag sets warning days",
        "Verify with: chage -l sana",
        "Man pages: man chage"
      ],
      "solution_steps": [
        "sudo chage -M 30 sana",
        "sudo chage -W 5 sana",
        "sudo chage -l sana"
      ],
      "validation_script": "validate_q2.sh",
      "cleanup_script": "chage -M 99999 -W 7 sana 2>/dev/null || true",
      "order": 2,
      "man_pages": ["chage", "passwd"],
      "related_commands": ["chage", "passwd", "usermod"]
    },
    {
