      "question_id": "Q1",
      "title": "Create User with Specific UID and Shell",
      "category": "User Management",
      "difficulty": "easy",
      "difficulty_stars": "⭐",
      "points": 10,
      "time_limit": 300,
      "description": "Create a new user named 'haris' with UID 1050 and default shell /bin/sh.",
      "requirements": [
        {
          "id": "username",
          "text": "Username: haris",
          "check_key": "username"
        },
        {
          "id": "uid",
          "text": "UID: 1050",
          "check_key": "uid"
        },
        {
          "id": "shell",
          "text": "Default shell: /bin/sh",
          "check_key": "shell"
        },
        {
          "id": "home",
          "text": "Home directory exists",
          "check_key": "home_exists"
        }
      ],
      "hints": [
        "Use 'useradd' command to create users",
        "The -u flag specifies the UID",
        "The -s flag specifies the shell",
        "Man pages: man useradd",
