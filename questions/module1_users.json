      "difficulty": "medium",
      "difficulty_stars": "⭐⭐",
      "points": 15,
      "time_limit": 600,
      "description": "Create a new group 'devops' and add user 'akram' as a secondary member of it.",
      "requirements": [
        {
          "id": "group_exists",
          "text": "Group 'devops' exists",
          "check_key": "group_exists"
        },
        {
          "id": "user_in_group",
          "text": "User 'akram' is member of 'devops'",
          "check_key": "user_in_group"
        },
        {
          "id": "secondary_group",
          "text": "'devops' is secondary group (not primary)",
          "check_key": "is_secondary"
        }
      ],
      "hints": [
        "User 'akram' should already exist (created during setup)",
